{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "build-win": {
      "dependsOn": ["build"],
      "outputs": ["dist/**", "out/**"]
    },
    "build-linux": {
      "dependsOn": ["build"],
      "outputs": ["dist/**", "out/**"]
    },
    "generate": {
      "dependsOn": ["^generate"]
    }
  }
}
