{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "outputs": [".next/**", "dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "build-win": {
      "dependsOn": ["build"],
      "outputs": ["dist/**", "out/**"]
    },
    "build-linux": {
      "dependsOn": ["build"],
      "outputs": ["dist/**", "out/**"]
    },
    "db:generate": {
      "dependsOn": ["^build"],
      "outputs": ["generated-prisma/**"]
    }
  }
}
