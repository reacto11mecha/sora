{
  "name": "sora-root",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma"
  },
  "scripts": {
    "build": "turbo run build --filter=sora --filter=vote-processor",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,css,md}\" --ignore-path .prettierignore",
    "dev:web": "turbo run dev --filter sora",
    "dev:sora": "turbo run dev --filter sora-desktop",
    "dev:absensi": "turbo run dev --filter absensi-desktop",
    "dev:processor": "turbo run dev --filter vote-processor",
    "build-desktop:win": "turbo run build-win --filter '*-desktop'",
    "build-desktop:linux": "turbo run build-linux --filter '*-desktop'",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "generate": "turbo run generate"
  },
  "devDependencies": {
    "prettier": "^2.8.6",
    "turbo": "^1.8.8"
  },
  "engines": {
    "node": ">=18.15.0"
  },
  "packageManager": "yarn@3.5.0"
}
