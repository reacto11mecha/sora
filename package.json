{
  "name": "sora-root",
  "private": true,
  "engines": {
    "node": ">=v18.16.0"
  },
  "scripts": {
    "build": "turbo run build --filter=@sora/web --filter=@sora/processor",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push db:generate",
    "dev:web": "turbo run dev --scope=@sora/web",
    "dev:sora": "turbo run dev --scope=@sora/chooser-desktop",
    "dev:absensi": "turbo run dev --scope=@sora/attendance-desktop",
    "dev:processor": "turbo run dev --scope=@sora/processor",
    "build-desktop:win": "turbo run build-win --filter '*-desktop'",
    "build-desktop:linux": "turbo run build-linux --filter '*-desktop'",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,css,md}\" --ignore-path .gitignore",
    "lint": "turbo lint && manypkg check",
    "lint:fix": "turbo lint:fix && manypkg fix",
    "type-check": "turbo type-check"
  },
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
    "@manypkg/cli": "^0.20.0",
    "@sora/eslint-config": "^0.1.0",
    "@types/prettier": "^2.7.2",
    "eslint": "^8.40.0",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "turbo": "^1.9.8",
    "typescript": "^5.0.4"
  },
  "packageManager": "yarn@3.5.0",
  "workspaces": [
    "apps/web",
    "apps/processor",
    "packages/api",
    "packages/auth",
    "packages/db",
    "packages/config/*",
    "packages/id-generator",
    "packages/petuah",
    "packages/settings",
    "packages/ui"
  ]
}
