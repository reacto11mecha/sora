{
  "name": "sora-root",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:web": "turbo run dev --filter sora",
    "dev:sora": "turbo run dev --filter sora-desktop",
    "dev:absensi": "turbo run dev --filter absensi-desktop",
    "build:web": "turbo run build --filter sora",
    "build-desktop:win": "turbo run build-win --filter *-desktop",
    "build-desktop:linux": "turbo run build-linux --filter *-desktop"
  },
  "devDependencies": {
    "prettier": "^2.8.6",
    "turbo": "^1.8.5"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
